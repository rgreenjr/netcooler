<% @page_title = 'Edit profile' %>

<h1><%= @page_title %></h1>

<h2>After editing your profile click save</h2>

<%= error_messages_for 'user' %>

<%= render :partial => 'shared/flasher' %>

<div class="form">
  <% form_for(:user, :url => user_url(@user), :html => { :method => :put }) do |form| %>
    <p><label for="user_username">Username:</label><%= form.text_field :username, :id => "username", :size => 40 %> <span id="username_status"></span></p>
    <p><label for="user_first_name">First Name: </label><%= form.text_field :first_name, :size => 40 %></p>
    <p><label for="user_last_name">Last Name: </label><%= form.text_field :last_name, :size => 40 %></p>
    <p><label for="user_email">Email: </label><%= form.text_field :email, :size => 40 %></p>
    <%= image_submit_tag "save.gif", :class => "submit" %>
  <% end %>
  <p>Want to change your password? <%= link_to "Click here", edit_password_url %></p>
</div>
