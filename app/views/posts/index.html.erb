<% if @user %>

  <% @page_title = "#{@category} Posts by #{h @user.username}" %>
  <h1><%= pluralize(number_with_delimiter(@posts.total_entries), "#{@category} Post") %> by <span class="highlight"><%= h @user.username %></span></h1>
  <% for post in @posts %>
    <%= render :partial => 'posts/summary', :locals => { :post => post } %>
  <% end %>

<% else %>

  <% @page_title = h(@company.name) %>
  <%= render :partial => 'companies/summary', :locals => { :company => @company } %>
  <%= render :partial => 'shared/tabs',       :locals => { :company => @company, :highlight_tab => @category.pluralize } %>
  <%= render :partial => 'posts/sub_nav',     :locals => { :company => @company, :category => @category } %>  
  <%= render :partial => 'posts/posts' %>

<% end %>

