#!/bin/sh
echo '======================================='
echo '-------------- log:clear --------------'
echo '======================================='
rake log:clear

echo '======================================='
echo '-------------- tmp:clear --------------'
echo '======================================='
rake tmp:clear

echo '======================================='
echo '--------- db:migrate VERSION=0 --------'
echo '======================================='
rake db:migrate VERSION=0

echo '======================================='
echo '------------ db:migrating -------------'
echo '======================================='
rake db:migrate

echo '======================================='
echo '----------- db:test:prepare -----------'
echo '======================================='
rake db:test:prepare
